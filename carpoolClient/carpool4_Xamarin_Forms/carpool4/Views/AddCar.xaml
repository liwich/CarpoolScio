<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Carpool.AddCar"
             Title="Add Car">
  <StackLayout Style="{StaticResource contentPageStyle}">
    <StackLayout Style="{StaticResource stackContent}">
      <Entry Placeholder="Model" x:Name="modelEntry"></Entry>
      <Entry Placeholder="Color" x:Name="colorEntry"></Entry>
      <ActivityIndicator x:Name="activityIndicator" IsRunning="False" ></ActivityIndicator>
      <Button Text="Add" x:Name="addButton" Style="{StaticResource buttonSuccessStyle}" Clicked="OnAdd"></Button>
    </StackLayout>
  </StackLayout>
</ContentPage>